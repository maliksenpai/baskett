<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.basket.baskettt2.View.MainActivity">

    <fragment
        android:id="@+id/fragment"
        android:name="com.basket.baskettt2.View.Topbar"
        android:layout_width="match_parent"
        android:layout_height="36dp" />

    <ImageView
        android:id="@+id/resim"
        android:layout_width="match_parent"
        android:layout_height="94dp"
        android:layout_below="@+id/fragment"
        android:src="@android:drawable/presence_away" />

    <Button
        android:id="@+id/Istatistik"
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:layout_below="@+id/resim"
        android:text="İstatistik" />

    <Button
        android:id="@+id/Puan"
        android:layout_width="190dp"
        android:layout_height="86dp"
        android:layout_below="@+id/Istatistik"
        android:text="Puan Durumu" />

    <Button
        android:id="@+id/Takvim"
        android:layout_width="200dp"
        android:layout_height="86dp"
        android:layout_below="@+id/Istatistik"
        android:layout_toRightOf="@+id/Puan"
        android:text="Takvim" />

    <Button
        android:id="@+id/Kadro"
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:layout_below="@+id/Takvim"
        android:text="Kadro" />

    <TextView
        android:id="@+id/Gununmaci"
        android:layout_width="144dp"
        android:layout_height="44dp"
        android:layout_below="@+id/Kadro"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="6dp"
        android:gravity="center"
        android:text="Günün Maçı" />

    <TextView
        android:id="@+id/BTakimIsim"
        android:layout_width="110dp"
        android:layout_height="51dp"
        android:layout_below="@+id/Gununmaci"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="TextView" />

    <TextView
        android:id="@+id/BTakimIstistik"
        android:layout_width="110dp"
        android:layout_height="36dp"
        android:layout_below="@+id/BTakimIsim"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text="TextView" />

    <TextView
        android:id="@+id/ITakımIsım"
        android:layout_width="110dp"
        android:layout_height="51dp"
        android:layout_below="@+id/Gununmaci"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/BTakimIsim"
        android:gravity="center"
        android:text="TextView" />

    <TextView
        android:id="@+id/ITakımIstatikstik"
        android:layout_width="110dp"
        android:layout_height="36dp"
        android:layout_below="@id/ITakımIsım"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@+id/BTakimIstistik"
        android:gravity="center"
        android:text="TextView" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="260dp"
        android:layout_height="187dp"
        android:layout_below="@+id/BTakimIstistik"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="-16dp"
        android:src="@android:drawable/presence_online" />
</RelativeLayout>